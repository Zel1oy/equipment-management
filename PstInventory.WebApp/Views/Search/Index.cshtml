@model PstInventory.WebApp.ViewModels.SearchViewModel

@{
    ViewData["Title"] = "Advanced Search";
}

<h1>@ViewData["Title"]</h1>
<p>Find equipment using one or more filters.</p>
<hr />

<div class="row">
    <div class="col-md-4">
        <h4>Search Filters</h4>
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="NameSearch" class="control-label"></label>
                <input asp-for="NameSearch" class="form-control" />
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group mb-3">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group mb-3">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoryIds" class="control-label"></label>
                <select asp-for="CategoryIds" class="form-control" asp-items="Model.CategoryOptions" multiple="multiple" style="height: 100px;"></select>
                <small class="form-text text-muted">Hold Ctrl/Cmd to select multiple.</small>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="LocationIds" class="control-label"></label>
                <select asp-for="LocationIds" class="form-control" asp-items="Model.LocationOptions" multiple="multiple" style="height: 100px;"></select>
                <small class="form-text text-muted">Hold Ctrl/Cmd to select multiple.</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>

    <div class="col-md-8">
        <h4>Results</h4>
        
        @if (!Model.Results.Any() && Model.SearchPerformed)
        {
            <div class="alert alert-info" role="alert">
                No equipment found matching your criteria.
            </div>
        }
        else if (Model.Results.Any())
        {
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Location</th>
                    <th>Date of Purchase</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Results)
                {
                    <tr>
                        <td>
                            <a asp-controller="Equipment" asp-action="Edit" asp-route-id="@item.Id">@item.Name</a>
                        </td>
                        <td>@item.Category.Name</td>
                        <td>@item.Location.Name</td>
                        <td>@item.DateOfPurchase.ToShortDateString()</td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
             <div class="alert alert-secondary" role="alert">
                Please enter your search criteria and click "Search".
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
