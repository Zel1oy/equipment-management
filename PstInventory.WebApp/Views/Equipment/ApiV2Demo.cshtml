@{
    ViewData["Title"] = "Equipment API v2 UI";
}

<h2>Новий інтерфейс (v2)</h2>

<table id="tbl" class="table table-striped"></table>

@section Scripts {
    <script>
        async function load() {
            const res = await fetch('/api/v2/equipment');
            const items = await res.json();

            document.getElementById('tbl').innerHTML = items
                .map(i => `<tr>
                    <td>${i.id}</td>
                    <td>${i.name}</td>
                    <td>${i.inventoryNumber}</td>
                    <td>${i.status}</td>
                    <td>${i.details ?? ""}</td>
                </tr>`)
                .join('');
        }
        load();
    </script>
}
